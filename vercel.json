{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": {
        "typescript": {
          "tsconfigPath": "tsconfig.json"
        },
        "includeFiles": ["src/public/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/public/$1" 
    },
    {
      "src": "/api/(.*)",
      "dest": "dist/server.js"
    }
  ]
}
