{
  "version": 2,
  "public": "src/public",
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": {
        "typescript": {
          "tsconfigPath": "tsconfig.json"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.ts"
    }
  ],
  "includeFiles": [
    "node_modules/**",
    "package.json",
    "package-lock.json"
  ]
}
