{
  "compilerOptions": {
    "target": "ES6",                     // Target JavaScript output
    "module": "commonjs",                // Modul sistem yang digunakan (Node.js)
    "rootDir": "./src",                  // Direktori root untuk source TypeScript
    "outDir": "./dist",                  // Direktori untuk output hasil build
    "strict": true,                      // Aktifkan strict mode TypeScript
    "esModuleInterop": true,             // Memungkinkan import/export ES6 ke CommonJS
    "skipLibCheck": true,                // Abaikan pemeriksaan tipe di dependency
    "forceConsistentCasingInFileNames": true // Konsistensi huruf besar/kecil di file
  },
  "include": ["src/**/*"],              // Sertakan semua file di dalam folder "src"
  "exclude": ["node_modules", "dist"]   // Abaikan folder node_modules dan dist
}
